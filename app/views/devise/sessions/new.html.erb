<div class = "col-md-6 col-md-offset-3">
	<div class = "signup-form">

	<h2 class = "text-center">Log in</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
		  <div class="form-inputs">
		  	<div class = "input-group">
		    	<span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span><%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
			</div><br>

			<div class = "input-group">
		    	<span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span><%= f.input :password, required: false, label: false, placeholder: "Password" %>
		    </div>	

		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			

		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Log in",class: "btn btn-primary btn-block" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	
	</div>

</div>
